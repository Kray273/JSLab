<style type="text/css">

	#test1 h1{
		display: inline;	/* 한줄 나란히 */
		width: 150px; /* inline으로 인해 적용 X */
		height : 100px; /* inline으로 인해 적용 X */
		background-color: purple;
	}
	
	#test2 h1{
		display: inline-block;	/* 각각의 블럭을 지정 */
		width: 150px;
		height : 100px;
		background-color: lime;
	}
	
	#test3 h1{
		display: none;	/* hidden 공간자체도 없음.*/
	}
	 
	#test4 h1{
		display: block;	/* 각각의 블럭을 지정 */
		width: 150px;
		height : 100px;
		background-color: purple;
	}
	
 	#mainmenu ol{
 		margin : auto;
 		text-align: center;
 	}
 	
	#mainmenu li{
		display: inline;
	} 
	
	a {
	 	text-decoration: none;			
	}
	 
	
</style>

</head>
